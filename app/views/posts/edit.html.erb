<h1> Edit Post </h1>

  <%= form_for @post, url: apartment_post_path, method: "patch" do |f| %>

    <div class="form-group">
      <%= f.label :contact %><br />
      <%= f.text_field :contact, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :referral_fee %><br />
      <%= f.text_field :p_ref_fee, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :ratio_me %><br />
      <%= f.text_field :ratio_me, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :ratio_you %><br />
      <%= f.text_field :ratio_you, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :Expiration_Date %><br />
      <%= f.text_field :exp_date, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "Save", class: "btn btn-block btn-success" %>
    </div>
  <% end %>

  <%= link_to 'Back', apartment_posts_path(@apartment) %>

  <%= console %>
