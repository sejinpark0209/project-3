<h1>Posts</h1>

<% if signed_in? %>
  <div class="new-post"><%= link_to 'New', new_apartment_post_path(@apartment, current_user.id), :class => "link" %></div>
<% end %>


<tbody>
  <div class="row">
    <div class="post-apt-info"><%= @apartment.name %></div>

    <% @posts.each do |post| %>
      <div class="col-sm-4">
        <div class="postInfo">
          <td>Contact Info : <%= post.contact %></td> </br>
          <td>The Referral Fee is $ <%= post.p_ref_fee %></td>
        </div>
        <div class="you_receive">
          <td>You will receive $<%= post.p_ref_fee - post.ratio_me %></td>
        </div>
        <div class="count_post">
          <td>Expires <%= post.exp_date %></td>
        </div>
        <td><%= link_to 'Edit', edit_apartment_post_path(@apartment, current_user.id, post.id), :class => "link" %></td>
        <td><%= link_to 'Delete', apartment_post_path(@apartment, post.user, post.id), :class => "link", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </div>
    <% end %>
  </div>
  </tbody>
