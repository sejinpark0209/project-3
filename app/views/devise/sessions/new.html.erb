<div class="container">
  <div class="row">

    <div class="col-md-4">

    </div>
    <div class="col-md-4" id="signin-form">
      <h2 class="sig">Sign In</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :email, placeholder: "Email", autofocus: true, class: "form-control" %>
        </div>
        <div class="field">
          <%= f.password_field :password, placeholder: "Password", autocomplete: "off", class: "form-control" %>
        </div>
        <br>
        <% if devise_mapping.rememberable? -%>
          <div class="remember">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class: "remember-me" %>
          </div>
        <% end -%>
        <br>
        <div class="logi">
          <%= f.submit "Log in", :class=>"btn btn-primary"%>
        </div>
        <br>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
    <div class="col-md-4">

    </div>
  </div>
</div>
