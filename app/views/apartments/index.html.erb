<h1>Apartments</h1>

<span class="addApt"><%= link_to 'Add New Apartment', new_apartment_path, :class => "btn btn-info btn-lg" %></span>
<!-- <span class="addApt"><%= link_to 'Add New Apartment', new_apartment_path, :class => "new-apt-link" %></span> -->
<body>
  <div class="row">

    <div style='width: 800px;'>
      <div id="map" style='width: 800px; height: 400px;'></div>
    </div>
    <% @apartments.each do |apartment| %>
    <div class="col-sm-4">
      <%= link_to apartment_posts_path(apartment) do %>

          <div class="col-xs-6" id="aptName">
            <td><%= apartment.name %></td>
          </div>
          <div class="col-xs-6" id="aptInfo">
            <td><%= apartment.address %></td>
            <td><%= apartment.city %></td>
            <td><%= apartment.state %></td>
          </div>
          <div class="calc_price">
            $<%= calc_price(apartment) %>
          </div>
          <div class="count_post">
          <%= count_post(apartment) %> posts
          </div>
          <div class="edit">
            <td><%= link_to 'Edit', edit_apartment_path(apartment.id), :class => "apt-link" %></td>
          </div>
          <div class="destroy">
            <td><%= link_to 'Destroy', apartment_path(apartment.id), :class => "apt-link", method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </div>

        <% end %>
      </div>

    <% end %>
  </div>


</body>

<script type="text/javascript">
var handler = Gmaps.build('Google');
  handler.buildMap({ internal: {id: 'custom_style'}, provider: {}, internal: {id: 'map'}}, function(){
    markers = handler.addMarkers(<%=raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>
